# Detectar todos los monitores conectados
MONITORES=$(xrandr | awk '/ connected/{print $1}')

for MON in $MONITORES; do
    # Detectar resolución máxima del monitor
    MAX_RES=$(xrandr | awk -v m="$MON" '
        $1 == m {
            getline
            print $1; exit
        }')
    
    # Aplicar fullscreen
    xrandr --output "$MON" --mode "$MAX_RES" --primary
done